<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popu_window_bg"
    android:gravity="center"
    android:id="@+id/ll_loading_view_root"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_loading_view"
        android:padding="10dp"
        android:background="@drawable/loadding_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_loading_view"
                android:src="@mipmap/loading_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>