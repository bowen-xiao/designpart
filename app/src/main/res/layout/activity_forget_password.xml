<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.bowen.zdsjclub.activity.ForgetPasswordActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@drawable/red_conner_login_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/login_margin_board"
        android:layout_marginRight="@dimen/login_margin_board"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <EditText
            android:inputType="phone"
            android:id="@+id/et_forget_password_phone"
            android:textSize="16sp"
            android:paddingLeft="@dimen/common_margin"
            android:hint="请输入你的登录手机号"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>


    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginLeft="@dimen/login_margin_board"
        android:layout_marginRight="@dimen/login_margin_board"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <EditText
            android:id="@+id/et_forget_password_msg_recevie"
            android:inputType="number"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:textSize="16sp"
            android:hint="请输入手机验证码"
            android:background="@drawable/red_conner_login_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:background="@drawable/red_conner_login_btn_bg"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/whilte"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_get_phone_msg_number" />
        </RelativeLayout>

    <Button
        android:id="@+id/btn_sure_to_reset_password"
        android:textSize="18sp"
        android:background="@drawable/red_conner_login_btn_bg"
        android:layout_marginTop="@dimen/common_margin"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/whilte"
        android:layout_marginLeft="@dimen/login_margin_board"
        android:layout_marginRight="@dimen/login_margin_board"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <TextView
        android:layout_marginTop="@dimen/common_margin"
        android:textSize="16sp"
        android:gravity="center"
        android:text="返回登录"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/tv_back_login" />

    </LinearLayout>
