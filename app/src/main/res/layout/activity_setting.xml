<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bowen.hannengclub.activity.SettingActivity">

    <LinearLayout
        android:background="@drawable/focus_item_bg"
        android:layout_marginTop="@dimen/focus_image_size"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="44dp">
        <View
            android:background="@color/bottom_textcolor_defeaut"
            android:layout_width="match_parent"
            android:layout_height="0.45dp"/>
        <RelativeLayout
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:layout_width="match_parent"
            android:layout_height="43.15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_centerVertical="true"
                android:text="当前版本号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/bottom_textcolor_defeaut"
                android:id="@+id/tv_setting_version_name"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1.0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/bottom_textcolor_defeaut"
            android:layout_width="match_parent"
            android:layout_height="0.45dp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="@dimen/login_type_size_margin"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="44dp">
        <View
            android:background="@color/bottom_textcolor_defeaut"
            android:layout_width="match_parent"
            android:layout_height="0.45dp"/>
        <RelativeLayout
            android:background="@drawable/focus_item_bg"
            android:id="@+id/rl_setting_clear_cache"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin"
            android:layout_width="match_parent"
            android:layout_height="43.15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_centerInParent="true"
                android:text="清除缓存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/bottom_textcolor_defeaut"
            android:layout_width="match_parent"
            android:layout_height="0.45dp"/>
    </LinearLayout>


</LinearLayout>
