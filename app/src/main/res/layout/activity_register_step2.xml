<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_step2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_line_height">

        <ImageView
            android:layout_marginLeft="@dimen/login_user_logo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/is_must_input"
            android:layout_width="@dimen/must_require"
            android:layout_height="@dimen/must_require" />

        <LinearLayout
            android:id="@+id/ll_confirm_nick_name"
            android:gravity="center_vertical"
            android:background="@drawable/red_conner_login_bg"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/login_margin_board"
            android:layout_marginRight="@dimen/login_margin_board"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_line_height">

            <EditText
                android:ellipsize="end"
                android:maxLines="1"
                android:id="@+id/et_confirm_nick_name"
                android:textSize="14sp"
                android:paddingLeft="@dimen/common_margin"
                android:hint="请输入你的昵称(可以为文字、字母、数字)"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_input_status_nick_name"
            android:layout_marginRight="@dimen/margin_right_speace"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/input_err"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_line_height">

        <ImageView
            android:layout_marginLeft="@dimen/login_user_logo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/is_must_input"
            android:layout_width="@dimen/must_require"
            android:layout_height="@dimen/must_require" />

        <LinearLayout
            android:id="@+id/ll_confirm_password_one"
            android:gravity="center_vertical"
            android:background="@drawable/red_conner_login_bg"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/login_margin_board"
            android:layout_marginRight="@dimen/login_margin_board"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_line_height">

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_confirm_password_phone"
                android:textSize="14sp"
                android:paddingLeft="@dimen/common_margin"
                android:hint="请输入6-16位内的字母加数字的密码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_input_status"
            android:layout_marginRight="@dimen/margin_right_speace"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/input_err"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_line_height">

        <ImageView
            android:layout_marginLeft="@dimen/login_user_logo"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/is_must_input"
            android:layout_width="@dimen/must_require"
            android:layout_height="@dimen/must_require" />

        <LinearLayout
            android:id="@+id/ll_confirm_password_two"
            android:gravity="center_vertical"
            android:background="@drawable/red_conner_login_bg"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/login_margin_board"
            android:layout_marginRight="@dimen/login_margin_board"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_line_height">

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_confirm_password_two"
                android:textSize="14sp"
                android:paddingLeft="@dimen/common_margin"
                android:hint="请再次输入您的密码"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_input_status_two"
            android:layout_marginRight="@dimen/margin_right_speace"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/input_err"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_line_height">


        <LinearLayout
            android:id="@+id/ll_register_two_introduce_root"
            android:gravity="center_vertical"
            android:background="@drawable/red_conner_login_bg"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/login_margin_board"
            android:layout_marginRight="@dimen/login_margin_board"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_line_height">

            <EditText
                android:inputType="phone"
                android:id="@+id/et_register_two_introduce_phone"
                android:textSize="14sp"
                android:paddingLeft="@dimen/common_margin"
                android:hint="请输入推荐人的手机号"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_input_status_introduce"
            android:layout_marginRight="@dimen/margin_right_speace"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/input_err"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_sure_to_confirm_register"
        android:textSize="18sp"
        android:background="@drawable/red_conner_login_btn_bg"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/whilte"
        android:layout_marginLeft="@dimen/login_margin_board"
        android:layout_marginRight="@dimen/login_margin_board"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_line_height" />

    <TextView
        android:paddingBottom="@dimen/common_margin"
        android:layout_marginTop="@dimen/login_line_margin"
        android:textSize="16sp"
        android:gravity="center"
        android:text="已有账号，点击登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_back_login" />

</LinearLayout>
