<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:background="@color/whilte"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="关注"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:background="@color/bottom_textcolor_defeaut"
        android:layout_width="match_parent"
        android:layout_height="0.45dp"/>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:id="@+id/ll_focus_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.bowen.hannengclub.view.LineItemView
                android:id="@+id/li_design_circle"
                app:my_title="设计圈"
                app:my_logo="@mipmap/design_cirle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:clickable="false"
                android:visibility="gone"
                android:id="@+id/tv_focus_msg_point"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_centerVertical="true"
                android:background="@drawable/msg_red_circle"
                android:layout_width="8dp"
                android:layout_height="8dp"/>
        </RelativeLayout>
        <View
            android:background="@color/bottom_textcolor_defeaut"
            android:layout_width="match_parent"
            android:layout_height="0.45dp"/>

        <com.bowen.hannengclub.view.LineItemView
            android:layout_marginTop="@dimen/common_margin"
            android:id="@+id/li_design_club_dynamic"
            app:my_title="俱乐部动态"
            app:my_logo="@mipmap/happy_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.bowen.hannengclub.view.LineItemView
            android:id="@+id/li_design_same_city"
            app:my_title="同城设计师"
            app:my_logo="@mipmap/same_place_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/bottom_textcolor_defeaut"
            android:layout_width="match_parent"
            android:layout_height="0.45dp"/>

        <com.bowen.hannengclub.view.LineItemView
            android:layout_marginTop="@dimen/common_margin"
            android:id="@+id/li_design_myfocus"
            app:my_title="关注的设计师"
            app:my_logo="@mipmap/fouce_designs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bowen.hannengclub.view.LineItemView
            android:id="@+id/li_design_focus_activity"
            app:my_title="关注的活动"
            app:my_logo="@mipmap/fouce_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bowen.hannengclub.view.LineItemView
            android:id="@+id/li_design_focus_subject"
            app:my_title="关注的专题"
            app:my_logo="@mipmap/fouce_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/bottom_textcolor_defeaut"
            android:layout_width="match_parent"
            android:layout_height="0.45dp"/>

    </LinearLayout>

    <include layout="@layout/new_popup_common_view" android:visibility="gone" />
</FrameLayout>



</LinearLayout>