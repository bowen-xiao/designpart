<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_confirm_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <LinearLayout
        android:id="@+id/ll_confirm_password_one"
        android:gravity="center_vertical"
        android:background="@drawable/red_conner_login_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/login_margin_board"
        android:layout_marginRight="@dimen/login_margin_board"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <EditText
            android:inputType="phone"
            android:id="@+id/et_confirm_password_phone"
            android:textSize="16sp"
            android:paddingLeft="@dimen/common_margin"
            android:hint="请输入6-16位内的字母加数字"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
        <ImageView
            android:id="@+id/iv_input_status"
            android:layout_marginRight="@dimen/margin_right_speace"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/input_right"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/common_margin"
        android:layout_width="match_parent"
        android:layout_height="48dp">
    <LinearLayout
        android:id="@+id/ll_confirm_password_two"
        android:gravity="center_vertical"
        android:background="@drawable/red_conner_login_bg"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/login_margin_board"
        android:layout_marginRight="@dimen/login_margin_board"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <EditText
            android:inputType="phone"
            android:id="@+id/et_forget_password_phone_two"
            android:textSize="16sp"
            android:paddingLeft="@dimen/common_margin"
            android:hint="请再次输入密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
        <ImageView
            android:id="@+id/iv_input_status_two"
            android:layout_marginRight="@dimen/margin_right_speace"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/input_right"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_sure_to_confirm_password"
        android:textSize="18sp"
        android:background="@drawable/red_conner_login_btn_bg"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/whilte"
        android:layout_marginLeft="@dimen/login_margin_board"
        android:layout_marginRight="@dimen/login_margin_board"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

</LinearLayout>
