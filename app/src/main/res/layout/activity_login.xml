<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/login_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/login_margin"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_width="70dp"
                android:layout_height="70dp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/login_line_margin"
                android:background="@drawable/red_conner_login_bg"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageView
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@mipmap/login_account"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <View
                    android:layout_marginLeft="5dp"
                    android:background="@color/login_red"
                    android:layout_width="1dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:textSize="16sp"
                    android:paddingLeft="@dimen/common_margin"
                    android:hint="请输入你的账号"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/login_line_margin"
                android:background="@drawable/red_conner_login_bg"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <ImageView
                    android:layout_marginLeft="@dimen/common_margin"
                    android:src="@mipmap/login_password"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <View
                    android:layout_marginLeft="5dp"
                    android:background="@color/login_red"
                    android:layout_width="1dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:textSize="16sp"
                    android:paddingLeft="@dimen/common_margin"
                    android:hint="请输入你的登录密码"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <Button
                android:textSize="18sp"
                android:background="@drawable/red_conner_login_btn_bg"
                android:layout_marginTop="@dimen/login_line_margin"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/whilte"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/btn_login" />

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">

                <TextView
                    android:gravity="center"
                    android:text="忘记密码?"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_forget_password" />
                <View
                    android:layout_marginRight="@dimen/common_margin"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:background="@color/bottom_textcolor_defeaut"
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>
                <TextView
                    android:gravity="center"
                    android:text="手机注册"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_user_register" />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="40dp"
                android:src="@mipmap/other_login_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/login_line_margin"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:src="@mipmap/wechat_login"
                    android:layout_width="@dimen/login_type_size"
                    android:layout_height="@dimen/login_type_size" />

                <ImageView
                    android:layout_marginLeft="@dimen/login_type_size"
                    android:src="@mipmap/qq_login"
                    android:layout_width="@dimen/login_type_size"
                    android:layout_height="@dimen/login_type_size" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>


</ScrollView>